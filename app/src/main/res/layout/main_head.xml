<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/main_background"
    android:layout_height="match_parent"
    android:layout_marginBottom="15dp">


    <ImageView
        android:id="@+id/big_gift"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="23dp"
        android:background="@drawable/radial_blue_2"
        android:contentDescription="@string/surprise_gift"
        android:src="@drawable/big_gift"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/try_surprise"
        android:textColor="@color/main_text_color"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="20sp"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/big_gift" />

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="18dp"
        android:background="@color/main_text_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/header_ideas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/header_ready_gifts"
        android:textColor="@color/main_text_color"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="20sp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="17dp"

        app:layout_constraintTop_toBottomOf="@+id/line1" />

</androidx.constraintlayout.widget.ConstraintLayout>